print("\n--FileOperations--\n")
# Writing to a file
print("Writing to file 'example.txt'")
with open('example.txt', 'w') as f:
    f.write("Hello, World!\nThis is a test file/\nHave a great day!")
    f.write("\nNew line added.")
    f.write("Another new line\n")
print("Writing completed.\n")
print("Contents of 'example.txt':")
with open('example.txt', 'r') as f:
    print(f.read())

# reading from a file
print("Reading from file 'example.txt'")
with open('example.txt', 'r') as f:
    content = f.readlines()
    for line in content:
        print(line.strip())


# Reading line by line
print("\nReading line by line from 'example.txt':")
with open('example.txt', 'r') as f:
    for line in f:
        print(f" {line.strip()}")


# Appending to a file
print("\nAppending to file 'example.txt'")
with open('example.txt', 'a') as f:
    f.write("\Appending this line at the end of the file.\n")
print("Appending completed.\n")
print("Updated contents of 'example.txt':")